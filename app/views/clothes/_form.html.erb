      <% end %>
      </ul>
    </div>
  <% end %>

<div style="width:500px">
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :picture %><br />
    <%= f.file_field :picture %>
  </div>
  <div class="field" style="float:left">
    <%= f.label :desc %><br />
    <%= f.text_area :desc %>
  </div>
  <div class="field" style="float:left">
    <%= f.label :Properties %><br />

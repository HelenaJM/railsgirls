    <tr>
    <th>Iron</th>
    <th>Temperature</th>
    </tr>
    <tr>
    <td>30 degrees cell 1</td>
    <td>row 1, cell 2</td>
    </tr>
    <tr>
    <td>row 2, cell 1</td>
    <td>row 2, cell 2</td>
    </tr>
    </table>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
</div>
<% end %>
